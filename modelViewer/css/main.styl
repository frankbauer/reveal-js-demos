.hotspot
    display block
    width 20px
    height 20px
    border-radius 10px
    border none
    background-color white
    box-sizing border-box
    pointer-events none

.hotspot[slot="hotspot-hand"]
    --min-hotspot-opacity 0
    background-color white

.annotation
    background-color #3a3e5a
    position absolute
    transform translate(10px, 10px)
    border-radius 10px
    padding 6px
    color white
    width 60px

:not(:defined)
    & > *
        display none
        
.footnote
    font-size 60%
    opacity 0.5